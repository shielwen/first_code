<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".demo9_login.demo9_register">
    <LinearLayout
        android:padding="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@mipmap/tubiao"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="0.5dp"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:gravity="center_vertical"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textSize="11sp"
                android:text=" 用户名:" />
            <EditText
                android:text=""
                android:id="@+id/demo9_register_edt1"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="10sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_margin="0.5dp"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:gravity="center_vertical"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textSize="11sp"
                android:text=" 密    码:" />
            <EditText
                android:text=""
                android:id="@+id/demo9_register_edt2"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="0.5dp"
            android:id="@+id/my_button4"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:gravity="center_vertical"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="11sp"
                android:text="最爱的菜:" />
            <EditText
                android:text=""
                android:id="@+id/demo9_register_edt3"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="10sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_margin="0.5dp"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:gravity="center_vertical"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textSize="11sp"
                android:text="个性签名:" />
            <EditText
                android:text=""
                android:id="@+id/demo9_register_edt4"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="10sp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/demo9_register_btn1"
            android:gravity="center"
            android:background="@color/color_one"
            android:layout_margin="10dp"
            android:text="返回"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/demo9_register_btn2"
            android:gravity="center"
            android:background="@color/color_one"
            android:layout_margin="10dp"
            android:text="确认"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>