<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFF6F9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="20dp"
            android:background="@mipmap/goodpic6"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fragment4_button0"
                android:layout_width="70dp"
                android:layout_gravity="center"
                android:src="@mipmap/first_pic2"
                android:layout_height="70dp" />
            <TextView
                android:id="@+id/fragment4_button1"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:text="雪中漫步"
                android:textColor="@color/white"/>
            <LinearLayout
                android:id="@+id/fragment4_button2"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="10sp"
                    android:text="编辑资料"
                    android:textColor="@color/white"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/smallpic2"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fragment4_button3"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:text="我的收藏" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/buttonpic11"/>
        </LinearLayout>
        <LinearLayout
            android:background="#9CA9A9"
            android:layout_width="match_parent"
            android:layout_height="0.3dp">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fragment4_button4"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:text="浏览记录" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/buttonpic12"/>
        </LinearLayout>
        <LinearLayout
            android:background="#9CA9A9"
            android:layout_width="match_parent"
            android:layout_height="0.3dp">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fragment4_button5"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:text="菜篮子" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/buttonpic13"/>
        </LinearLayout>
        <LinearLayout
            android:background="#9CA9A9"
            android:layout_width="match_parent"
            android:layout_height="0.3dp">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fragment4_button6"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:text="我的订单" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/buttonpic14"/>
        </LinearLayout>

        <LinearLayout
            android:background="#9CA9A9"
            android:layout_width="match_parent"
            android:layout_height="0.3dp">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fragment4_button7"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:text="联系我们" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/buttonpic15"/>
        </LinearLayout>
        <LinearLayout
            android:background="#9CA9A9"
            android:layout_width="match_parent"
            android:layout_height="0.3dp">
        </LinearLayout>
        <LinearLayout
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:text="版本更新" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/buttonpic16"/>
        </LinearLayout>
        <LinearLayout
            android:background="#9CA9A9"
            android:layout_width="match_parent"
            android:layout_height="0.3dp">
        </LinearLayout>
        <LinearLayout

            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:text="设 置" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/buttonpic17"/>
        </LinearLayout>
        
    </LinearLayout>
</ScrollView>