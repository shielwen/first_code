<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/wall_p1"
    tools:context=".demo7_otheractivity.demo7_setting">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/color_one"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/demo7_setting_back"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="返回"
            android:textColor="#fff" />
        <TextView
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="设置"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#fff" />
        <TextView
            android:textSize="18sp"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:textColor="#fff" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/demo7_setting_lin1"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:text="修改密码" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/demo7_setting_lin2"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:text="进入官网" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/demo7_setting_lin3"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:text="退出登录" />
    </LinearLayout>
</LinearLayout>