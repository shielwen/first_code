<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".demo9_login.demo9_login">
    <LinearLayout
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@mipmap/tubiao"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/color_one"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:text=""
            android:id="@+id/demo9_login_edt1"
            android:layout_margin="0.5dp"
            android:background="@color/white"
            android:hint="账号/用户名"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <EditText
            android:text=""
            android:id="@+id/demo9_login_edt2"
            android:layout_margin="0.5dp"
            android:background="@color/white"
            android:hint="密码"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/demo9_login_text1"
            android:text="忘记密码？"
            android:textSize="15sp"
            android:gravity="right"
            android:textColor="@color/text2"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <Button
            android:id="@+id/demo9_login_btn1"
            android:text="注册"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_margin="3dp"
            android:background="@color/color_one"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/demo9_login_btn2"
            android:text="登录"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_margin="3dp"
            android:background="@color/color_one"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/demo9_login_text2"
            android:text="游客浏览 "
            android:textSize="15sp"
            android:gravity="right"
            android:textColor="@color/text2"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />
    </LinearLayout>


</LinearLayout>